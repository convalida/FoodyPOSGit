<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.ctpl_dt10.foodypos.BestSeller">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/progressLayout"
            android:visibility="visible"/>


        <ScrollView
     android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/mainLayout"
            android:visibility="invisible"

            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/weekly"
                android:layout_margin="20dp"
                android:elevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/weekly_bestsellers_item"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="10dp"
                        android:textSize="21sp"
                        />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="invisible"
                            android:id="@+id/noDataWeek">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sorry, No data found"
                                android:textSize="19sp"
                                android:textColor="#000"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/weekTableLayout">
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="3">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:id="@+id/weekItem1"
                                    android:gravity="start"
                                    android:layout_marginBottom="3dp"
                                    android:layout_weight="2"
                                    android:textSize="19sp"
                                    android:textColor="#000"
                                    android:layout_marginLeft="10dp"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text=""
                                    android:id="@+id/weekItem1Qty"
                                    android:layout_marginBottom="3dp"
                                    android:gravity="center"
                                    android:textSize="19sp"
                                    android:textColor="#000"
                                    android:layout_marginRight="10dp"/>
                            </TableRow>

                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:weightSum="3"
                                >

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text=""
                                    android:id="@+id/weekItem2"
                                    android:textSize="19sp"
                                    android:layout_marginBottom="3dp"
                                    android:textColor="#000"
                                    android:layout_marginLeft="10dp"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textSize="19sp"
                                    android:textColor="#000"
                                    android:text=""
                                    android:id="@+id/weekItem2Qty"
                                    android:layout_marginBottom="3dp"
                                    android:layout_marginRight="10dp"/>
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="3"
                                android:layout_marginBottom="3dp">
                                <TextView
                                    android:text=""
                                    android:id="@+id/weekItem3"
                                    android:textSize="19sp"
                                    android:textColor="#000"
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="0dp"
                                    android:layout_marginBottom="3dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text=""
                                    android:id="@+id/weekItem3Qty"
                                    android:layout_marginBottom="3dp"
                                    android:gravity="center"
                                    android:layout_marginRight="10dp"
                                    android:textSize="19sp"
                                    android:textColor="#000"/>
                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:weightSum="1">
                                <Button
                                    android:layout_weight="1"
                                    android:id="@+id/weeklyMore"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorAccent"
                                    android:textColor="#fff"
                                    android:text="View More"/>
                            </TableRow>
                        </TableLayout>
                    </FrameLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/monthly"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:elevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/monthly_bestsellers_item"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="10dp"
                        android:textSize="21sp"
                        />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="invisible"
                            android:id="@+id/noDataMonth">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sorry, No data found"
                                android:textSize="19sp"
                                android:textColor="#000"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/monthTableLayout"
                            android:visibility="visible">
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="3">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:id="@+id/monthItem1"
                                    android:gravity="start"
                                    android:layout_weight="2"
                                    android:textSize="19sp"
                                    android:layout_marginBottom="3dp"
                                    android:textColor="#000"
                                    android:layout_marginLeft="10dp"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text=""
                                    android:id="@+id/monthItem1Qty"
                                    android:gravity="center"
                                    android:textSize="19sp"
                                    android:textColor="#000"
                                    android:layout_marginBottom="3dp"
                                    android:layout_marginRight="10dp"/>
                            </TableRow>
                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:weightSum="3"
                                >
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text=""
                                    android:id="@+id/monthItem2"
                                    android:textSize="19sp"
                                    android:textColor="#000"
                                    android:layout_marginBottom="3dp"
                                    android:gravity="start"
                                    android:layout_marginLeft="10dp"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textSize="19sp"
                                    android:layout_marginBottom="3dp"
                                    android:textColor="#000"
                                    android:text=""
                                    android:id="@+id/monthItem2Qty"
                                    android:layout_marginRight="10dp"/>
                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="3"
                                android:layout_marginBottom="5dp">
                                <TextView
                                    android:text=""
                                    android:id="@+id/monthItem3"
                                    android:textSize="19sp"
                                    android:textColor="#000"
                                    android:layout_marginBottom="3dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:gravity="start"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text=""
                                    android:id="@+id/monthItem3Qty"
                                    android:gravity="center"
                                    android:layout_marginRight="10dp"
                                    android:textSize="19sp"
                                    android:layout_marginBottom="3dp"
                                    android:textColor="#000"/>
                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:weightSum="1">
                                <Button
                                    android:layout_weight="1"
                                    android:id="@+id/monthlyMore"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorAccent"
                                    android:textColor="#fff"
                                    android:text="View More"/>
                            </TableRow>
                        </TableLayout>
                    </FrameLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/yearly"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:elevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/yearly_bestsellers_item"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="10dp"
                        android:textSize="21sp"
                        />
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="3">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:id="@+id/yearBestOne"
                                android:gravity="start"
                                android:layout_weight="2"
                                android:textSize="19sp"
                                android:textColor="#000"
                                android:layout_marginBottom="3dp"
                                android:layout_marginLeft="10dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:id="@+id/yearBestOneNum"
                                android:gravity="center"
                                android:textSize="19sp"
                                android:textColor="#000"
                                android:layout_marginBottom="3dp"
                                android:layout_marginRight="10dp"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:weightSum="3"
                            >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text=""
                                android:id="@+id/yearBestTwo"
                                android:textSize="19sp"
                                android:textColor="#000"
                                android:layout_marginBottom="3dp"
                                android:gravity="start"
                                android:layout_marginLeft="10dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="19sp"
                                android:textColor="#000"
                                android:layout_marginBottom="3dp"
                                android:text=""
                                android:id="@+id/yearBestTwoNum"
                                android:layout_marginRight="10dp"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="3"
                            android:layout_marginBottom="5dp">
                            <TextView
                                android:text=""
                                android:id="@+id/yearBestThree"
                                android:textSize="19sp"
                                android:textColor="#000"
                                android:layout_marginLeft="10dp"
                                android:layout_width="0dp"
                                android:gravity="start"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_marginBottom="3dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:id="@+id/yearBestThreeNum"
                                android:gravity="center"
                                android:layout_marginRight="10dp"
                                android:textSize="19sp"
                                android:layout_marginBottom="3dp"
                                android:textColor="#000"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:weightSum="1">
                            <Button
                                android:layout_weight="1"
                                android:id="@+id/yearlyMore"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorAccent"
                                android:textColor="#fff"
                                android:text="View More"/>
                        </TableRow>
                    </TableLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>



        </LinearLayout>
        </ScrollView>

    </FrameLayout>



    </RelativeLayout>