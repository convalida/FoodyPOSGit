<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.convalida.ctpl_dt10.foodypos.OrderList">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/orderProgress">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>


    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
        android:id="@+id/mainOrderlistLayout"
        android:visibility="invisible">


   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="5dp"
       android:elevation="10dp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginBottom="10dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:weightSum="2"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp">

           <TextView
               android:id="@+id/From"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=""
               android:layout_weight="1"
               android:textColor="#000000"
               android:textSize="18sp"
               android:gravity="center_horizontal"
               android:layout_marginLeft="10dp"
               android:layout_marginStart="10dp"
               android:background="@drawable/rounded_corners"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="-"
               android:layout_marginLeft="5dp"
               android:layout_marginStart="5dp"
               android:layout_marginEnd="5dp"
               android:layout_marginRight="5dp"
               android:textSize="20sp"
               android:textColor="#000000" />

           <TextView
               android:id="@+id/To"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=""
               android:layout_weight="1"
               android:textColor="#000000"
               android:textSize="18sp"
               android:layout_marginRight="10dp"
               android:layout_marginEnd="10dp"
               android:gravity="center_horizontal"
               android:background="@drawable/rounded_corners"
               />


           <Button
               android:id="@+id/search"
               android:layout_width="wrap_content"
               android:layout_height="30dp"
               android:layout_marginRight="10dp"
               android:layout_marginEnd="10dp"
               android:text="Search"
               android:layout_gravity="end"
               android:background="@color/colorPrimary"
               android:textColor="#ffffff"
               android:textSize="13sp" />

       </LinearLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Total Orders:"
                   android:textColor="@color/colorPrimary"
                   android:textSize="17sp"
                   android:id="@+id/ordersText"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="5dp"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_toRightOf="@id/ordersText"
                   android:layout_alignBaseline="@id/ordersText"
                   android:id="@+id/orders"
                   android:text=""
                   android:textSize="17sp"
                   android:textColor="#000"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentEnd="true"
                   android:layout_alignParentRight="true"
                   android:id="@+id/amountValue"
                   android:textSize="17sp"
                   android:layout_alignBaseline="@id/ordersText"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="10dp"
                   android:text=""
                   android:textColor="#000"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/colorPrimary"
                   android:textSize="17sp"
                   android:layout_toLeftOf="@id/amountValue"
                   android:layout_alignBaseline="@id/ordersText"
                   android:text="Total Amount:"
                   />

           </RelativeLayout>
       </LinearLayout>


   </android.support.v7.widget.CardView>
      <ExpandableListView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/expadableList"/>
   </LinearLayout>
    </FrameLayout>
</RelativeLayout>
