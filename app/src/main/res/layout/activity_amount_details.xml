<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.convalida.android.foodypos.AmountDetails">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textSize="40sp"
        android:id="@+id/icon"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon"
        android:text="SubTotal:"
        android:id="@+id/subTotalText"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/subTotalValue"
        android:gravity="right"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/subTotalText"
        android:layout_alignBaseline="@id/subTotalText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subTotalText"
        android:text="Tax"
        android:id="@+id/taxText"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/taxText"
        android:layout_alignBaseline="@id/taxText"
        android:layout_margin="5dp"
        android:text=""
        android:id="@+id/taxPerValue"
        android:textSize="18sp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/taxNumValue"
        android:gravity="right"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/taxText"
        android:layout_alignBaseline="@id/taxText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/taxText"
        android:text="Tip:"
        android:id="@+id/tipText"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tipValue"
        android:gravity="right"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tipText"
        android:layout_alignBaseline="@id/tipText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tipText"
        android:text="GrandTotal:"
        android:id="@+id/grandTotal"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/grandTotalValue"
        android:gravity="right"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/grandTotal"
        android:layout_alignBaseline="@id/grandTotal"/>

</RelativeLayout>
