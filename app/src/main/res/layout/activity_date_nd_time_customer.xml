<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.convalida.android.foodypos.DateNdTimeCustomer">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_date_range_black_24dp"
        android:layout_margin="10dp"
        android:id="@+id/calendarIcon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/calendarIcon"
        android:layout_toEndOf="@id/calendarIcon"
        android:textSize="15sp"
        android:textColor="#000"
        android:layout_marginTop="13dp"
        android:text=""
        android:id="@+id/dateText"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:textSize="15sp"
        android:textColor="#000"
        android:text=""
        android:id="@+id/timeText"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/timeText"
        android:layout_toStartOf="@id/timeText"
        android:layout_margin="10dp"
        android:src="@drawable/ic_access_time_highlight_24dp"/>

</RelativeLayout>
