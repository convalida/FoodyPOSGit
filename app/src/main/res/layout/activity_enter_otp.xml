<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.convalida.ctpl_dt10.foodypos.EnterOTP">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Verification Code"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="15sp"
        android:textColor="#000"
        android:layout_gravity="center_horizontal"
        android:text="Please type the verification code sent to:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#000"
        android:id="@+id/userMailId"
        android:layout_gravity="center_horizontal"
        android:text=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/layout_otp">

        <EditText
            android:layout_width="40dp"
            android:layout_height="52dp"
            android:id="@+id/digitOne"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            />
        <EditText
            android:layout_width="40dp"
            android:layout_height="52dp"
            android:id="@+id/digitTwo"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            />
        <EditText
            android:layout_width="40dp"
            android:layout_height="52dp"
            android:id="@+id/digitThree"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            />
        <EditText
            android:layout_width="40dp"
            android:layout_height="52dp"
            android:id="@+id/digitFour"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            />
        <EditText
            android:layout_width="40dp"
            android:layout_height="52dp"
            android:id="@+id/digitFive"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            />
        <EditText
            android:layout_width="40dp"
            android:layout_height="52dp"
            android:id="@+id/digitSix"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            />
    </LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/verifyBtn"
        android:background="@color/disabledBtn"
        android:textColor="#fff"
        android:visibility="visible"
        android:text="Verify"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:id="@+id/resendBtn"
            android:text="Resend verification code"/>



</LinearLayout>
    
    </ScrollView>