<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.convalida.ctpl_dt10.foodypos.CustomerClick">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userText"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:layout_centerHorizontal="true"
                android:text="Alex"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userText"
                android:id="@+id/contactText"
                android:layout_centerHorizontal="true"
                android:text="(253)651-8803"
                android:textColor="#000"
                android:drawableLeft="@drawable/ic_local_phone_black_28dp"
                android:drawableStart="@drawable/ic_local_phone_black_28dp"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/contactText"
                android:id="@+id/mailText"
                android:layout_centerHorizontal="true"
                android:text="Tallgrassdanger@gmail.com"
                android:textColor="#000"
                android:drawableLeft="@drawable/ic_email_black_28dp"
                android:drawableStart="@drawable/ic_email_black_28dp"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/customerDetailList"/>
    </LinearLayout>
</ScrollView>
