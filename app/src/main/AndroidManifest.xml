<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ctpl_dt10.foodypos">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ForgotPassword"
            android:noHistory="true"
            android:theme="@style/ForgotPasswordDialog" />
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/generateNoTitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login" />
        <activity android:name=".OrderList" />
        <activity android:name=".BestSeller" />
        <activity android:name=".TopSeller" />
        <activity android:name=".ChangePassword" />
        <activity android:name=".EmployeeDetails" />
        <activity
            android:name=".AddEmployeeDetail"
            android:theme="@style/ForgotPasswordDialog" />
        <activity
            android:name=".EditEmployeeDetail"
            android:theme="@style/ForgotPasswordDialog">
            <intent-filter>
                <action android:name="com.example.ctpl_dt10.foodypos.editEmployeeDetail" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Customer" />
        <activity android:name=".Reports" />
        <activity android:name=".Sales" />
        <activity
            android:name=".EnterOTP"
            android:configChanges="keyboardHidden|screenSize|orientation" />
        <activity
            android:name=".ResetPassword"
            android:theme="@style/ForgotPasswordDialog" />
        <activity android:name=".OnClickOrder" />
        <activity
            android:name=".AmountDetails"
            android:theme="@style/ForgotPasswordDialog" />
        <activity android:name=".CustomerClick" />
        <activity
            android:name=".DateNdTimeCustomer"
            android:theme="@style/ForgotPasswordDialog" />
        <activity
            android:name=".AmountCustomer"
            android:theme="@style/ForgotPasswordDialog" />
        <activity android:name=".CustomerOrderDetails" />
        <activity
            android:name=".EmptyActivity"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:theme="@style/generateNoTitle" />
        <activity android:name=".BestsellerMore"></activity>
    </application>

</manifest>