<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.convalida.android.foodypos">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.convalida.android.foodypos.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.convalida.android.foodypos.ForgotPassword"
            android:noHistory="true"
            android:theme="@style/ForgotPasswordDialog" />
        <activity
            android:name="com.convalida.android.foodypos.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/generateNoTitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.convalida.android.foodypos.Login"
            />
        <activity android:name="com.convalida.android.foodypos.OrderList"
            >

        </activity>
        <activity android:name="com.convalida.android.foodypos.BestSeller"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.convalida.android.foodypos.TopSeller"
            />
        <activity android:name="com.convalida.android.foodypos.ChangePassword" />
        <activity android:name="com.convalida.android.foodypos.EmployeeDetails" />
        <activity
            android:name="com.convalida.android.foodypos.AddEmployeeDetail"
            android:theme="@style/ForgotPasswordDialog" />
        <activity
            android:name="com.convalida.android.foodypos.EditEmployeeDetail"
            android:theme="@style/ForgotPasswordDialog">
            <intent-filter>
                <action android:name="com.example.ctpl_dt10.foodypos.editEmployeeDetail" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.convalida.android.foodypos.Customer" />
        <activity android:name="com.convalida.android.foodypos.Reports"
            />
        <activity android:name="com.convalida.android.foodypos.Sales"
            />
        <activity
            android:name="com.convalida.android.foodypos.EnterOTP"
            android:configChanges="keyboardHidden|screenSize|orientation" />
        <activity
            android:name="com.convalida.android.foodypos.ResetPassword"
            android:theme="@style/ForgotPasswordDialog" />
        <activity android:name="com.convalida.android.foodypos.OnClickOrder" >
            <intent-filter>
                <action android:name="OPEN_ACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </activity>
        <activity
            android:name="com.convalida.android.foodypos.AmountDetails"
            android:theme="@style/ForgotPasswordDialog" />
        <activity android:name="com.convalida.android.foodypos.CustomerClick" />
        <activity
            android:name="com.convalida.android.foodypos.DateNdTimeCustomer"
            android:theme="@style/ForgotPasswordDialog" />
        <activity
            android:name="com.convalida.android.foodypos.EmptyActivity"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:theme="@style/generateNoTitle" />
        <activity android:name="com.convalida.android.foodypos.BestsellerMore"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|screenSize"/>
        <service android:name="com.convalida.android.foodypos.MyFirebaseMessagingService"
            android:stopWithTask="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/notification_icon"
            />
        <meta-data android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

<meta-data android:name="com.google.firebase.messaging.default_notification_channel_id"
    android:value="my_channel_01"/>
    </application>

</manifest>