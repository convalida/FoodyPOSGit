<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.convalida.ctpl_dt10.foodypos">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.convalida.ctpl_dt10.foodypos.MainActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.convalida.ctpl_dt10.foodypos.ForgotPassword"
            android:noHistory="true"
            android:theme="@style/ForgotPasswordDialog" />
        <activity
            android:name="com.convalida.ctpl_dt10.foodypos.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/generateNoTitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.convalida.ctpl_dt10.foodypos.Login" />
        <activity android:name="com.convalida.ctpl_dt10.foodypos.OrderList" />
        <activity android:name="com.convalida.ctpl_dt10.foodypos.BestSeller" />
        <activity android:name="com.convalida.ctpl_dt10.foodypos.TopSeller" />
        <activity android:name="com.convalida.ctpl_dt10.foodypos.ChangePassword" />
        <activity android:name="com.convalida.ctpl_dt10.foodypos.EmployeeDetails" />
        <activity
            android:name="com.convalida.ctpl_dt10.foodypos.AddEmployeeDetail"
            android:theme="@style/ForgotPasswordDialog" />
        <activity
            android:name="com.convalida.ctpl_dt10.foodypos.EditEmployeeDetail"
            android:theme="@style/ForgotPasswordDialog">
            <intent-filter>
                <action android:name="com.example.ctpl_dt10.foodypos.editEmployeeDetail" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.convalida.ctpl_dt10.foodypos.Customer" />
        <activity android:name="com.convalida.ctpl_dt10.foodypos.Reports" />
        <activity android:name="com.convalida.ctpl_dt10.foodypos.Sales" />
        <activity
            android:name="com.convalida.ctpl_dt10.foodypos.EnterOTP"
            android:configChanges="keyboardHidden|screenSize|orientation" />
        <activity
            android:name="com.convalida.ctpl_dt10.foodypos.ResetPassword"
            android:theme="@style/ForgotPasswordDialog" />
        <activity android:name="com.convalida.ctpl_dt10.foodypos.OnClickOrder" />
        <activity
            android:name="com.convalida.ctpl_dt10.foodypos.AmountDetails"
            android:theme="@style/ForgotPasswordDialog" />
        <activity android:name="com.convalida.ctpl_dt10.foodypos.CustomerClick" />
        <activity
            android:name="com.convalida.ctpl_dt10.foodypos.DateNdTimeCustomer"
            android:theme="@style/ForgotPasswordDialog" />
        <activity
            android:name="com.convalida.ctpl_dt10.foodypos.AmountCustomer"
            android:theme="@style/ForgotPasswordDialog" />
        <activity android:name="com.convalida.ctpl_dt10.foodypos.CustomerOrderDetails" />
        <activity
            android:name="com.convalida.ctpl_dt10.foodypos.EmptyActivity"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:theme="@style/generateNoTitle" />
        <activity android:name="com.convalida.ctpl_dt10.foodypos.BestsellerMore"/>
        <service android:name="com.convalida.ctpl_dt10.foodypos.MyFirebaseInstanceIdService"
            android:stopWithTask="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>